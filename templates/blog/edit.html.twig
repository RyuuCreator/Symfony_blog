{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Edit Article{% endblock %}

{% block body %}
    <h1>Edit Article</h1>

    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h4>Modifier l'article {{ article.title }}</h4>
                {% if article.picture is not null %}
                    <img style="width:300px; height:300px;" src="/uploads/{{ article.picture }}" alt="">
                {% else %}
                    <img style="width:300px; height:300px;" src="/uploads/imgDefault.jpg" alt="">
                {% endif %}
            </div>
        </div>
        {{ include('blog/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a href="{{ path('blog_index') }}">back to list</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
