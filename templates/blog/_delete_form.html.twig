<form method="post" action="{{ path('blog_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <a href="{{ path('blog_delete', {'id': article.id}) }}"><i class="material-icons-round red-text">delete</i></a>
</form>
