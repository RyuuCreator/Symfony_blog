<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Symfony Blog{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- CSS only BOOTSTRAP 5.1 -->
            {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> #}
            <!-- CSS MATERIALIZE -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
            <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Round" rel="stylesheet">
            <!-- ASSETS/CSS/STYLE.CSS -->
            <link rel="stylesheet" href="/assets/css/style.css">
        {% endblock %}
    </head>
    <body>
        <nav>
            <div class="nav-wrapper">
                <div class="container">
                    <a href="{{ path('blog_index') }}" class="brand-logo">Symfony Blog</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('blog_index') }}"><span class="material-icons-round">home</span></a></li>
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('admin') }}"><span class="material-icons-round">admin_panel_settings</span></a></li>
                            {% endif %}
                            <li><a href="{{ path('app_logout') }}"><span class="material-icons-round">logout</span></a></li>
                            
                        {% else %}
                            <li><a href="{{ path('app_login') }}"><span class="material-icons-round">login</span></a></li>
                            <li><a href="{{ path('app_register') }}"><span class="material-icons-round">how_to_reg</span></a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div id="body">
            {% block body %}

            {% endblock %}
        </div>

        <div id="footer">
            {% block footer %}
                <div class="white-text row">
                    <div class="col s12 center">
                        <p>&copy; Copyright 2021 by you.</p>
                    </div>
                </div>
            {% endblock %}
        </div>

        {% block scripts %}
            {{ encore_entry_script_tags('app') }}
            <!-- JavaScript Bundle with Popper BOOTSTRAP 5.1 -->
            {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> #}
            <!-- JavaScript MATERIALIZE -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

            <script>$('select').formSelect();</script>
        {% endblock %}
    </body>
</html>